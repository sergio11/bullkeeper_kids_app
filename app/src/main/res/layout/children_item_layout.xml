<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:layout_marginBottom="5dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <!-- Foreground -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/common_list_item_state"
        android:orientation="vertical">

        <FrameLayout
            android:id="@+id/terminalImageContainer"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="4dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:layout_alignParentTop="true"
            android:background="@color/primaryColor">

            <!-- Child Image -->
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/childImageImageView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:contentDescription="@string/content_not_be_loaded"
                android:src="@drawable/child_white_solid"
                app:civ_border_color="@color/commonWhite"
                app:civ_border_width="@dimen/common_image_stroke_width" />

        </FrameLayout>

        <!-- Separator -->
        <View
            android:id="@+id/separator"
            android:layout_width="4dp"
            android:layout_height="match_parent"
            android:background="@color/primaryDarkColor"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@id/terminalImageContainer"/>

        <!-- Kid Full Name -->
        <TextView
            android:id="@+id/kidFullNameTextView"
            style="@style/CommonStrongText.Medium"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_toEndOf="@id/separator"
            android:gravity="start|center_vertical"
            android:singleLine="true"
            android:padding="0dp"
            android:paddingStart="@dimen/common_padding"
            android:text="-"
            android:textColor="@color/commonWhite"
            android:textStyle="italic" />


        <!-- School -->
        <TextView
            android:id="@+id/schoolNameTextView"
            style="@style/CommonStrongText.Medium"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/kidFullNameTextView"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_toEndOf="@id/separator"
            android:gravity="start|center_vertical"
            android:singleLine="true"
            android:padding="0dp"
            android:paddingStart="@dimen/common_padding"
            android:text="-"
            android:textColor="@color/commonWhite"
            android:textStyle="italic" />


        <!-- Terminals -->
        <TextView
            android:id="@+id/terminalsLinkedTextView"
            style="@style/CommonStrongText.Medium"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/schoolNameTextView"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_toEndOf="@id/separator"
            android:gravity="start|center_vertical"
            android:singleLine="true"
            android:padding="0dp"
            android:paddingStart="@dimen/common_padding"
            android:text="-"
            android:textColor="@color/commonWhite"
            android:textStyle="italic" />

    </RelativeLayout>

</FrameLayout>


